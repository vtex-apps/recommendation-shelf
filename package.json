{
  "name": "recommendation-shelf",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json}\"",
    "lint:locales": "intl-equalizer",
    "verify": "yarn lint && yarn format:check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn verify"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vtex/intl-equalizer": "^2.5.1",
    "@vtex/prettier-config": "^1.0.0",
    "eslint": "^8.57.0",
    "eslint-config-vtex": "^15.0.1",
    "eslint-config-vtex-react": "^9.0.1",
    "eslint-plugin-lodash": "^7.4.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2"
  },
  "volta": {
    "node": "20.16.0",
    "yarn": "1.19.2"
  }
}
